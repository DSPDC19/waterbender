<script>
     function getColor(d) {
    return d >= 1000 ? '#ee0c10' :
           d >= 500  ? '#eaed26' :      
           d >= 200  ? '#E31A1C' :
           d >= 100  ? '#3f9413' :
           d >= 50   ? '#FD8D3C' :
           d >= 20   ? '#FEB24C' :
           d >= 10   ? '#0750ab' :
                      '#0950a8';
}
function style(feature) {
    return {
        fillColor: getColor(feature.properties.density),
        weight: 2,
        opacity: 1,
        color: 'white',
        dashArray: '3',
        fillOpacity: 0.7
    };
}

L.geoJson(drstates, {style: style}).addTo(map);
